		double number6 = 66;
		double number7 = 88;
		float number8 = 99;
		float number9 = 200;
		int sum; //declare an integer variable called sum to hold the sum value
		int sum2;
		int sum3;
		int average;
		int average2;
		double div;
		float div2;
		float multiply;
		float mul2;
		
		sum = number1 + number2 + number3 + number4 + number5; //compute sum
		sum3 = number1 + number2;
